---
const nav = [
  { href: "#services", label: "Servicios" },
  { href: "#trabajos", label: "Trabajos" },
  { href: "#clientes", label: "Clientes" },
  { href: "#FAQ", label: "FAQ" },
];
const images = [
  "/imagen1.jpg",
  "/imagen2.jpg",
  "/imagen3.jpg",
  "/imagen4.jpg",
  "/imagen5.jpg",
];
---

<header class="relative h-screen w-full overflow-hidden">
  <!-- Imágenes del carrusel -->
  <div id="carousel" class="absolute inset-0 w-full h-full">
    {
      images.map((src, i) => (
        <img
          src={src}
          alt={`Imagen ${i + 1}`}
          class={`carousel-image absolute inset-0 w-full h-full object-cover transition-opacity duration-700 ease-in-out ${i === 0 ? "opacity-100 z-10" : "opacity-0 z-0"}`}
          loading="lazy"
          data-index={i}
        />
      ))
    }
  </div>

  <!-- Overlay para oscurecer y mejorar legibilidad -->
  <div class="absolute inset-0 bg-[#0a3f61]/40 backdrop-blur-[2px] z-20"></div>

  <!-- Contenido del header -->
  <div class="relative z-30 mx-auto max-w-7xl h-full flex flex-col">
    <!-- Barra superior: logo a la izquierda, nav centrado, menú móvil a la derecha -->
    <div class="flex items-end h-20 w-full px-4 sm:px-6 lg:px-8">
      <!-- Logo a la izquierda -->
      <a href="#inicio" class="flex-shrink-0 mr-42">
        <img src="/logo_cavelux.png" alt="Cavelux Logo" class="h-16 w-auto" />
      </a>

      <!-- Contenedor central que crece y centra el nav -->
      <div class="flex flex-grow">
        <nav class="hidden md:flex items-end gap-12 text-white">
          {
            nav.map((item) => (
              <a
                href={item.href}
                class="text-[14px] font-bold hover:text-blue-200 transition-colors flex items-center gap-4"
              >
                {item.label}
                {item.label === "Contacto" && (
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="16"
                    height="16"
                    fill="currentColor"
                    class="bi bi-whatsapp"
                    viewBox="0 0 16 16"
                  >
                    <path d="M13.601 2.326A7.85 7.85 0 0 0 7.994 0C3.627 0 .068 3.558.064 7.926c0 1.399.366 2.76 1.057 3.965L0 16l4.204-1.102a7.9 7.9 0 0 0 3.79.965h.004c4.368 0 7.926-3.558 7.93-7.93A7.9 7.9 0 0 0 13.6 2.326zM7.994 14.521a6.6 6.6 0 0 1-3.356-.92l-.24-.144-2.494.654.666-2.433-.156-.251a6.56 6.56 0 0 1-1.007-3.505c0-3.626 2.957-6.584 6.591-6.584a6.56 6.56 0 0 1 4.66 1.931 6.56 6.56 0 0 1 1.928 4.66c-.004 3.639-2.961 6.592-6.592 6.592m3.615-4.934c-.197-.099-1.17-.578-1.353-.646-.182-.065-.315-.099-.445.099-.133.197-.513.646-.627.775-.114.133-.232.148-.43.05-.197-.1-.836-.308-1.592-.985-.59-.525-.985-1.175-1.103-1.372-.114-.198-.011-.304.088-.403.087-.088.197-.232.296-.346.1-.114.133-.198.198-.33.065-.134.034-.248-.015-.347-.05-.099-.445-1.076-.612-1.47-.16-.389-.323-.335-.445-.34-.114-.007-.247-.007-.38-.007a.73.73 0 0 0-.529.247c-.182.198-.691.677-.691 1.654s.71 1.916.81 2.049c.098.133 1.394 2.132 3.383 2.992.47.205.84.326 1.129.418.475.152.904.129 1.246.08.38-.058 1.171-.48 1.338-.943.164-.464.164-.86.114-.943-.049-.084-.182-.133-.38-.232" />
                  </svg>
                )}
              </a>
            ))
          }
        </nav>
      </div>

      <!-- Menú móvil a la derecha -->
      <details class="md:hidden ml-auto relative z-10">
        <summary
          class="list-none cursor-pointer p-2 -mr-2 rounded-md hover:bg-white/10 text-white"
        >
          <span class="sr-only">Abrir menú</span>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-6 w-6"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </summary>
        <div
          class="absolute right-4 mt-2 w-56 rounded-lg border border-slate-200 bg-white shadow-lg p-2 flex flex-col"
        >
          {
            nav.map((item) => (
              <a
                href={item.href}
                class="px-3 py-2 rounded-md hover:bg-slate-50 text-sm text-slate-700 flex items-center gap-2"
              >
                {item.label}
                {item.label === "Contacto" && (
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="16"
                    height="16"
                    fill="currentColor"
                    class="bi bi-whatsapp"
                    viewBox="0 0 16 16"
                  >
                    <path d="M13.601 2.326A7.85 7.85 0 0 0 7.994 0C3.627 0 .068 3.558.064 7.926c0 1.399.366 2.76 1.057 3.965L0 16l4.204-1.102a7.9 7.9 0 0 0 3.79.965h.004c4.368 0 7.926-3.558 7.93-7.93A7.9 7.9 0 0 0 13.6 2.326zM7.994 14.521a6.6 6.6 0 0 1-3.356-.92l-.24-.144-2.494.654.666-2.433-.156-.251a6.56 6.56 0 0 1-1.007-3.505c0-3.626 2.957-6.584 6.591-6.584a6.56 6.56 0 0 1 4.66 1.931 6.56 6.56 0 0 1 1.928 4.66c-.004 3.639-2.961 6.592-6.592 6.592m3.615-4.934c-.197-.099-1.17-.578-1.353-.646-.182-.065-.315-.099-.445.099-.133.197-.513.646-.627.775-.114.133-.232.148-.43.05-.197-.1-.836-.308-1.592-.985-.59-.525-.985-1.175-1.103-1.372-.114-.198-.011-.304.088-.403.087-.088.197-.232.296-.346.1-.114.133-.198.198-.33.065-.134.034-.248-.015-.347-.05-.099-.445-1.076-.612-1.47-.16-.389-.323-.335-.445-.34-.114-.007-.247-.007-.38-.007a.73.73 0 0 0-.529.247c-.182.198-.691.677-.691 1.654s.71 1.916.81 2.049c.098.133 1.394 2.132 3.383 2.992.47.205.84.326 1.129.418.475.152.904.129 1.246.08.38-.058 1.171-.48 1.338-.943.164-.464.164-.86.114-.943-.049-.084-.182-.133-.38-.232" />
                  </svg>
                )}
              </a>
            ))
          }
        </div>
      </details>
    </div>

    <!-- Texto centrado debajo de la barra -->
    <div class="flex-grow flex flex-col justify-center items-start text-white text-left px-4 sm:px-6 lg:px-8 gap-4 w-full max-w-xl -mt-50">
      <h1 class="text-4xl font-bold drop-shadow-lg">FABRICAMOS TU IMAGEN</h1>
      <p class="text-lg drop-shadow-md font-bold">
        Diseño, calidad y trayectoria para que tu marca se destaque siempre
      </p>
    </div>

    <!-- Controles del carrusel -->
    <div
      id="carousel-controls"
      class="absolute bottom-8 left-1/2 transform -translate-x-1/2 flex gap-4 z-30"
    >
      {
        images.map((_, i) => (
          <button
            class="w-4 h-4 rounded-full bg-white/50 hidden"
            aria-label={`Ir a la imagen ${i + 1}`}
            data-index={i}
            type="button"
          />
        ))
      }
    </div>
  </div>

  <script is:inline>
    (() => {
      const images = document.querySelectorAll(".carousel-image");
      const buttons = document.querySelectorAll("#carousel-controls button");
      let currentIndex = 0;
      const total = images.length;

      function showImage(index) {
        images.forEach((img, i) => {
          img.style.opacity = i === index ? "1" : "0";
          img.style.zIndex = i === index ? "10" : "0";
        });
        buttons.forEach((btn, i) => {
          btn.classList.toggle("bg-white", i === index);
          btn.classList.toggle("bg-white/50", i !== index);
        });
        currentIndex = index;
      }

      buttons.forEach((btn) => {
        btn.addEventListener("click", () => {
          const index = Number(btn.dataset.index);
          showImage(index);
          resetInterval();
        });
      });

      let interval = setInterval(() => {
        let nextIndex = (currentIndex + 1) % total;
        showImage(nextIndex);
      }, 5000);

      function resetInterval() {
        clearInterval(interval);
        interval = setInterval(() => {
          let nextIndex = (currentIndex + 1) % total;
          showImage(nextIndex);
        }, 5000);
      }
    })();
  </script>
</header>
