---
export interface Props {
  title?: string;
  description?: string;
}
const { title = 'Cavelux', description = 'Iluminaci√≥n y soluciones visuales para marcas y espacios.' } = Astro.props;
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Intro from '../components/sections/Intro.astro';
import Hero from '../components/Hero.astro';
import Divider from '../components/Divider.astro';
import Clientes from '../components/Clientes.astro';
import Trabajos from '../components/Trabajos.astro';
---
<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-white text-slate-800 antialiased">
    <Header />
    <Hero />
    
    <Divider />
    <Trabajos />
    <Clientes />

    
    
    <main class="pt-16">{/* espacio por header sticky */}
      <slot />
    </main>
  </body>
</html>